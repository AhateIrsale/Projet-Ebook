@model ebook_website.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <style>
        .mylog {
            box-shadow: 2px 2px 8px black;
            border: groove 7px #bca705;
            border-radius: 10px;
            text-align: center;
            background-color: white;
        }
       
        .control-label {
            text-align: center;
        }

        .form {
            margin-left: 7px;
        }
    </style>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>

</head>
<body style="background-image:url(https://png.pngtree.com/thumb_back/fw800/background/20190925/pngtree-black-background-material-design-with-yellow-image_315569.jpg);">
    <div >
        <nav class="nav fixed-top" style="bottom:0;height:80px; font-size:30px;padding-top:20px;background-color:black; box-shadow:2px 3px 5px black;color:darkgoldenrod">
            <div class="container-fluid">
                <div style="text-align:center">
                    <div class="" style="font-family:Bahnschrift;"> Adminstration :</div>
                </div>
            </div>
        </nav>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="mylog container w-50 " >
            @using (Html.BeginForm("login", "admin", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="container">
                    <br />
                    <h2>S'identifier</h2>
                    <hr />
                    <b>@Html.ValidationSummary(true, "", new { @class = "text-danger t" })</b>
                    <br />
                    <div class="form-group">
                        <label for="your_name">Adresse mail : </label>
                        <input class="w-50" style="border-radius: 5px; margin-left:35px; height:40px ; width:250px;" type="email" name="Email" id="your_name" placeholder="votre adresse mail" required />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="your_pass"> Mot de passe :</label>
                        <input class="w-50" style="border-radius: 5px; margin-left:30px; height:40px ; width:250px;" type="password" name="Password" id="your_pass" placeholder="Mot de passe" required />
                    </div>

                    <div class="form-group">
                        <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                        <label style="margin-right:35px;" for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label> <b> @Html.ActionLink("  Besoin d'un compte ?", "register")</b>
                    </div>
                    <div class="form-group form-button">
                        <input style="background-color: #ffd700;font-weight: bold; color:black;border-radius:3px; width:120px;" type="submit" name="signin" id="signin" class="form-submit" value="S'identifier" />
                    </div>
                    <br />
                    <br />
                </div>

            }
        </div>
        <footer class="footer fixed-bottom" style="bottom:0;height:60px; font-size:17px;padding-top:10px;background-color:black; box-shadow:-2px 3px 5px gray">
            <div class="container-fluid">
                <div style="text-align:center;color: darkgoldenrod">
                    <div class="">Copyright &copy; <a style="text-decoration:none;color:goldenrod" href="~/Test/home">E-Book</a> @DateTime.Now.Date.ToShortDateString()</div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
