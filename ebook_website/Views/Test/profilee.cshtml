@model ebook_website.Models.Utilisateur

@{
    ViewBag.Title = "profilee";
    Layout = "~/Views/Shared/_MyDefaultPage.cshtml";
}
<br />
<br />
<h2 align="center">Mon profile </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b>Nom : </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control w-50" } })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Prénom : </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control w-50" } })
                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <b>Adresse mail : </b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control w-50 " } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
}

<div>
    <p>Voulez-vous changer mot de passe? <a href="~/Test/EditPassword">Cliquez ici</a> </p>

</div>