    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>E-Book</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">


    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>


    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    @RenderPage("~/Views/Shared/_Header.cshtml")
    <!-- Masthead-->
    <header class="masthead">
        <div class="container">
            <div id="welcome" class="masthead-subheading">Bienvenue sur E-Book !</div>
            <div class="masthead-heading text-uppercase">Votre espace lecture</div>
            @if (User.Identity.IsAuthenticated && Session["email"] != null)
            {
                @Html.ActionLink("Découvrir nos livres", "afterLogin", "Test", new { @class = "botn btn btn-primary btn-xl text-uppercase js-scroll-trigger ", @id = "seconn" })
            }
            else
            {
                // @Html.ActionLink("Se Connecter", "login", "Test", new { @class = "botn btn btn-primary btn-xl text-uppercase js-scroll-trigger ", @data - bs - target = "#exampleModal", @id = "seconn" })
                <button type="button" id="seconn" class="botn btn btn-primary btn-xl text-uppercase js-scroll-trigger " data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Se connecter
                </button>
                <!-- Modal -->

            }

        </div>
    </header>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="margin-top:10em; padding:0px 20px;">
        <div class="modal-dialog modal-none">
            <div class="modal-content">
                <div class="modal-header" style=" background-image: linear-gradient(to bottom, white, gold);">
                    <h2 style="text-align:center" class="form-title">Se connecter</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <!---->
                <br />
                <div class="signin-form" style="margin-left:10%;">

                    @using (Html.BeginForm("login", "test", FormMethod.Post, new { @class = "form" }))
                    {
                        //@Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="your_name"><b>Adresse mail : </b></label>
                            <input style="border-radius: 5px; margin-left:35px; height:40px ; width:250px;" type="email" name="Email" id="your_name" placeholder="votre nom" required />
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><b>Mot de passe : </b></label>
                            <input style="border-radius: 5px; margin-left:30px; height:40px ; width:250px;" type="password" name="Password" id="your_pass" placeholder="Mot de passe" required />
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                            <label style="margin-right:35px;" for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label> <b> @Html.ActionLink("  Besoin d'un compte ?", "register")</b>
                        </div>
                        <div class="form-group form-button">
                            <input style="background-color: #ffd700;font-weight: bold; color:black;border-radius:3px; width:120px;" type="submit" name="signin" id="signin" class="form-submit" value="S'identifier" />
                        </div>

                    }
                </div>
                <!---->
            </div>
        </div>
    </div>
    <!-- fin Modal -->
    <!-- Modal -->
    <div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false" style="margin-top:10em; padding:0px 20px;">
        <div class="modal-dialog modal-none">
            <div class="modal-content">
                <div class="modal-header" style=" background-color: lightslategray">
                    <h2 style="text-align:center" class="form-title">Contactez-nous </h2>
                    <button type="button" data-bs-dismiss="modal" aria-label="Close"><img src="~/assets/img/214-2148729_tab-close-svg-png-icon-free-download-mute.jpg" style="width:15px;height:17px;" /></button>
                </div>
                <!---->
                <br />
                <h4> @Session["ct"]</h4>
                <br />
                <h5>Votre message a été envoyé.</h5>
                <!---->
            </div>
        </div>
    </div>
    <!-- fin Modal -->

    <!-- Team-->
    <section class="page-section bg-light" id="team">
        <div class="container">
            <h2 align="center" class="section-heading text-uppercase">Notre équipe</h2><br>
            <div class="row">
                <div class="col-lg-6">
                    <div id="dev1" class="team-member">
                        <img class="mx-auto rounded-circle" src="~/assets/img/team/me.png" />
                        <h4>Mohamed Akaddar</h4>
                        <p class="text-muted">Front-End Developer</p>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="team-member">
                        <img class=" rounded-circle" src="~/assets/img/team/hind.jpeg" />
                        <h4>Hind Issousi</h4>
                        <p class="text-muted">Back-End developer</p>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Contact-->
    @using (Html.BeginForm("contact", "test", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section class="page-section" id="contact">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Contactez-nous</h2>
                    <h3 class="section-subheading text-muted">N'hesistez pas de nous contacter.</h3>
                </div>
                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="name" class="form-control" type="text" name="nom" placeholder="Votre nom *" required="required" style="color:black" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input id="email" class="form-control" type="email" name="email" placeholder="Votre e-mail *" required="required" style="color:black" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group mb-md-0">
                                <input id="tel" class="form-control" type="tel" name="tel" placeholder="Votre numéro tel *" required="required" style="color:black" />
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <textarea id="txtarea" class="form-control" name="contenu" placeholder="Votre message *" required="required" data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        @if (Session["ct"] != null)
                        {
                            <button id="btnSend" class="botn btn-primary btn-xl text-uppercase" type="submit" data-bs-toggle="modal" data-bs-target="#contactModal">Send Message</button>
                        }
                        else
                        {
                            <button id="btnSend" class="botn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
                        }
                    </div>
                </form>
            </div>
        </section>
    }
    <!-- Footer-->
    <div class="footer " style="bottom:0;color:white; font-family: Verdana; font-size:18px; padding: 10px; background-color:black" ;box-shadow: 10px 0px 5px gold ;>

        <div  class="cont" style="text-align:center; font-size:15px; color:gold">
            <br />
            <a class="btn btn-dark btn-social mx-2" style="background-color:#252323" href="#!"><i class="fab fa-twitter" style="color:gold;"></i></a>
            <a class="btn btn-dark btn-social mx-2" style="background-color:#252323" href="#"><i class="fab fa-facebook-f" style="color:gold"></i></a>
            <a class="btn btn-dark btn-social mx-2" style="background-color:#252323" href="#!"><i class="fab fa-linkedin-in" style="color:gold"></i></a>
                  <p style="margin-top:7px"> Copyrights &copy; sont  protéctés par - E-book <a href="~/admin/login">website</a> </p>

        </div>

    </div>

